<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/ftextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="31dp"
        android:text="Number:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btcalfact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ftextView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Calc Factorial" />

    <TextView
        android:id="@+id/ftextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ftextView1"
        android:layout_below="@+id/btcalfact"
        android:layout_marginTop="17dp"
        android:text="Fact Result :"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btbackfact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ftextView2"
        android:layout_centerVertical="true"
        android:text="BACK" />

</RelativeLayout>
