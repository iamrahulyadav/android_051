<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/ptextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Number:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/ptextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ptextView1"
        android:layout_below="@+id/pbutton1"
        android:layout_marginTop="39dp"
        android:text="Pow Result:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/pbutton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ptextView3"
        android:layout_below="@+id/ptextView1"
        android:layout_marginTop="81dp"
        android:text="Calc Power" />

    <EditText
        android:id="@+id/peditText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ptextView1"
        android:layout_marginRight="45dp"
        android:layout_marginTop="22dp"
        android:hint="Enter Power" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/ptextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/peditText1"
        android:layout_alignBottom="@+id/peditText1"
        android:layout_toLeftOf="@+id/pbutton1"
        android:text="Power:" />

    <Button
        android:id="@+id/pbutton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pbutton1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="66dp"
        android:text="BACK" />

</RelativeLayout>
